{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Sorting 10GB",
  "config": {
    "font": "Spectral, sans-serif"
  },
  "autosize": "fit",
  "width": 500,
  "height": 300,
  "data": {
    "url": "./sortingData.csv"
  },
  "encoding": {
    "x": {
      "field": "nodes",
      "type": "quantitative",
      "sort": null,
      "scale": {
        "type": "log",
        "base": 2,
        "nice": true
      },

      "title": "Nodes"
    },
    "y": {
      "field": "time",
      "aggregate": "mean",
      "type": "quantitative",
      "title": "Duration (seconds)"
    },
    "color": {
      "field": "name",
      "title": "Implementation",
      "type": "nominal"
    }
  },
  "layer": [
    {
      "mark": { "type": "point" }
    },
    {
      "mark": { "type": "line", "tooltip": true, "point": "transparent" },
      "encoding": {
        "y": {
          "field": "duration"
        }
      }
    }
  ]
}
